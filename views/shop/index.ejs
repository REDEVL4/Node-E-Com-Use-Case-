    <main>
        <div class="product-container">
            <%if(products && products.length >0){%>
            <% products.forEach(product => { %>
                <div class="product" id="<%=product.Id%>">
                    <div class="product-info" id="outOfStock<%=product.Id%>">
                        <% if (product.AvailabileQuantity === 0) { %>
                            <div class="product-out-of-stock">Out of Stock</div>
                        <% } %>
                        <h2 class="productName"><%= product.Name %></h2>
                        <p class="productCategory">Category: <%= product.Category %></p>
                        <p class="Subcategory">Subcategory: <%= product.SubCategory %></p>
                        <p class="Cost">Cost: $<%= product.Cost %></p>
                        <%if(product.AvailabileQuantity > 0 && product.AvailabileQuantity < 10){%>
                            <p id="AvailableQuantityHeader<%=product.Id%>" class="AvailableQuantity text-danger bounce %>"><span id="<%=product.Id%>AvailableQuantity">Only <%= product.AvailabileQuantity %> left in stock.</span></p>
                        <%}%>
                        <!-- <% if(IsSeller==true){%>
                            <button class="btn btn-outline-danger removeProduct" onclick='onRemoveProduct("<%=product.Id%>")'><i class="fa-solid fa-trash" style="color: #ec555d;"></i></button>
                        <%}%> -->
                        <div class="btn-group mt-2 mb-3">
                            <button class=" btn btn-outline-warning viewDetails">View Details</button> 
                            <% if (product.AvailabileQuantity > 0) { %>
                                <button class="btn btn-outline-success addToCart" id="addToCart<%=product.Id%>" onclick='addToCart("<%=product.Id%>")'><i class="fa-solid fa-cart-plus fa-xl"></i></button>
                            <%}%>
                            <!-- <% if(IsSeller==true){%>
                                <button class="btn btn-outline-success editProduct" onclick='onEditProduct("<%=product.Id%>")'>Edit Details</button>
                            <%}%> -->
                        </div>
                </div>
                    <div class="product-image-container">
                        <img src="<%= product.ImageUrl %>" alt="<%= product.Name %>" class="product-image">
                        <div class="product-overlay">
                            <p><%= product.Description %></p>
                            <p>Manufactured By: <%= product.ManufacturedBy %></p>
                            <p>Manufactured On: <%= new Date(product.ManufacturedOn).toLocaleDateString() %></p>
                            <p>Seller: <%= product.SellerInfo.SellerName %></p>
                            <p>Seller Email: <%= product.SellerInfo.SellerEmail %></p>
                            <p>Seller Address: <%= product.SellerInfo.SellerAddress.AddressLine1 %>, <%= product.SellerInfo.SellerAddress.AddressLine2 %>, <%= product.SellerInfo.SellerAddress.ZipCode %>, <%= product.SellerInfo.SellerAddress.City %>, <%= product.SellerInfo.SellerAddress.State %>, <%= product.SellerInfo.SellerAddress.Country %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
            <%}else{%>
                <p class="mb-2 pb-3 pt-3 bg-primary text-white text-center" style="font-size: larger;font-weight: bolder;border-radius: 5px; width: 90%;">No products found.</p>
            <%}%>
        </div>
        <input hidden id="UserName" value="<%=UserName%>"/>
        <input hidden id="Password" value="<%=Password%>"/>
